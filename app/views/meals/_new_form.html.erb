<%= simple_form_for(@meal) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: 'Your Meal name'%>
    <%= f.input :description, placeholder: 'description'%>
    <%= f.input :min_size, placeholder: 'Minimum people'%>
    <%= f.input :max_size, placeholder: 'Maximum people'%>
    <%= f.input :price, placeholder: 'Price per head'%>
    <%= f.input :category, placeholder: 'Meal Category'%>
    <%= f.input :location, placeholder: 'City'%>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
