<div class="container text-center">
  <%# <div class="row justify-content-space-between"> %>
    <%# <div class="col-8"> %>
    <div class="row align-items-center justify-content-between mb-4 mt-5">
      <div class="col-12 col-md-6">
        <h1 class="text-start mb-0"> Discover New Mealful Experiences </h1>
      </div>
      <div class="col-12 col-md-6 col-lg-4">
        <%= form_with url: meals_path, method: :get, class: "d-flex" do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a meal or location"
          %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  <div class="row justify-content-center">
    <%= render 'meals/list', meals: @meals %>
  </div>
</div>
