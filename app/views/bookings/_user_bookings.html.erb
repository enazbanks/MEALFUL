<div>
  <ul>
    <% meal.bookings.each do |booking|%>
      <% if policy(booking).show? %>
        <li>
          <%= "You are booked in for #{booking.date}" %>
          <%= "with #{booking.size}" %> <i class="fa-solid fa-people-group"></i>
          <%= "Total cost $#{booking.price}" %>
          <%= booking.status %>
          <% if booking.confirmed? && Date.today >= booking.date %>
            <%= link_to "Rate this meal", new_booking_rating_path(booking), class: "btn btn-primary" %>
            <%# <%= render "new_rating", rating: @rating %>
            <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
